{
  "manifest_version": 2,

  "name": "Find The Film",
  "description": "This is a simple extension to find basic information about movies very quickly",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.js","script.js"]
    }
  ],
  "icons": { "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"},

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  }
}
